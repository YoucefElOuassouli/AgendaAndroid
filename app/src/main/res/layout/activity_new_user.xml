<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText,LabelFor,RtlHardcoded,RtlSymmetry,UselessParent,UsingOnClickInXml,Autofill,SpUsage"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".Admin.UsersManagement.NewUser">



    <ImageButton
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="35dp"
        android:background="@drawable/home"
        android:layout_height="35dp"
        android:id="@+id/Admin_home"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGENDA"
        android:layout_toEndOf="@+id/Admin_home"
        android:layout_toStartOf="@+id/LogOut"
        android:fontFamily="@font/montserrat"
        android:textSize="25dp"
        android:id="@+id/App_Name"
        android:textColor="@color/secondary_color"/>
    <TextView
        android:textAlignment="center"
        android:layout_below="@+id/App_Name"
        android:fontFamily="@font/montserrat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="agenda horse riding"
        android:layout_toEndOf="@+id/Admin_home"
        android:layout_toStartOf="@+id/LogOut"
        android:textSize="15dp"
        android:textColor="@color/optional_color_one"/>


    <ImageButton
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/exit"
        android:id="@+id/LogOut"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"
        tools:ignore="ContentDescription" />



    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/primary_color"
        android:textColorHint="@color/primary_color"
        android:hint="Email"
        android:paddingStart="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/edit_text"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/LogOut"
        android:id="@+id/email_new_user"/>


    <EditText
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/primary_color"
        android:textColorHint="@color/primary_color"
        android:hint="Nom Complet"
        android:paddingStart="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/edit_text"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/email_new_user"
        android:id="@+id/user_name_new_user"/>



    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/primary_color"
        android:textColorHint="@color/primary_color"
        android:hint="Mot de Pass"
        android:paddingStart="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/edit_text"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/user_name_new_user"
        android:id="@+id/password_new_user"/>


    <EditText
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/primary_color"
        android:textColorHint="@color/primary_color"
        android:hint="Numero Telephone"
        android:paddingStart="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/edit_text"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/password_new_user"
        android:id="@+id/phone_new_user"/>


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/primary_color"
        android:textColorHint="@color/primary_color"
        android:autofillHints="Role"
        android:paddingStart="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:popupBackground="@drawable/edit_text"
        android:background="@drawable/edit_text"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/phone_new_user"
        android:id="@+id/role_new_user"/>


    <TextView
        android:id="@+id/CreateUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textColor="@color/secondary_color"
        android:layout_below="@+id/role_new_user"
        android:background="@color/optional_color_two"
        android:layout_marginTop="25dp" />


</RelativeLayout>