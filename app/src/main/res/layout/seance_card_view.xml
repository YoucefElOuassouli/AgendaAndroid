<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText,LabelFor,RtlHardcoded,RtlSymmetry,UselessParent,UsingOnClickInXml,Autofill,SpUsage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textSize="18dp"
            android:textColor="@color/optional_color_one"
            android:id="@+id/Time"/>

        <RelativeLayout
            android:id="@+id/SeanceHolder"
            android:layout_marginStart="5dp"
            android:background="@drawable/green_with_img_btn"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:paddingBottom="20dp"
            android:paddingEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titre"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:id="@+id/Seance_title"/>

            <TextView
                android:layout_below="@+id/Seance_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="description"
                android:textColor="@color/primary_color"
                android:id="@+id/seance_desc"/>

            <TextView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:00 15:00"
                android:textColor="@color/primary_color"
                android:id="@+id/From_To"/>


        </RelativeLayout>




    </LinearLayout>


</RelativeLayout>