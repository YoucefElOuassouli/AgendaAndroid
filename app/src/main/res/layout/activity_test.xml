<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="HardcodedText,LabelFor,RtlHardcoded,RtlSymmetry,UselessParent,UsingOnClickInXml,Autofill,SpUsage"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Client.Test">


    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:inputType="textFilter"
        android:hint="Search..."
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/primary_color"
        android:textColorHint="@color/primary_color"
        android:fontFamily="@font/montserrat"
        android:textSize="20sp"
        android:id="@+id/search_for_seance_or_day"
        android:background="@drawable/edit_text"
        android:paddingLeft="25dp"/>




    <ListView
        android:layout_width="match_parent"
        android:id="@+id/rv"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_for_seance_or_day"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"/>


</RelativeLayout>