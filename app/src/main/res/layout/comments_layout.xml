<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText,LabelFor,RtlHardcoded,RtlSymmetry,UselessParent,UsingOnClickInXml,Autofill,SpUsage"

    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="DisableBaselineAlignment,UselessParent">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Seance_label"
                android:id="@+id/label_seance"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:paddingLeft="10dp"/>

            <TextView
                android:layout_below="@+id/label_seance"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Seance_monitor"
                android:id="@+id/monitor_seance"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                tools:ignore="ObsoleteLayoutParam" />


        </RelativeLayout>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/seance_new_date"
                android:text="Seance_label"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                tools:ignore="ObsoleteLayoutParam" />
            <TextView
                android:paddingLeft="5dp"
                android:layout_toEndOf="@+id/seance_new_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/newDate"
                android:text="/ newDate"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newDate"
                android:layout_alignParentStart="true"
                android:textSize="15sp"
                android:id="@+id/From_To"
                android:text="Comment"
                android:paddingStart="15dp"/>


        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>